<?xml version="1.0" encoding="UTF-8"?>
<web-app id="maven-test-spring" version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>Newtouch WFS Web Application</display-name>
	<description>Newtouch WFS Web应用</description>

	<!-- 欢迎页面 -->
	<welcome-file-list>
		<welcome-file></welcome-file>
	</welcome-file-list>

	<!-- 静态资源访问 -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.html</url-pattern>
		<url-pattern>*.jpg</url-pattern>
		<url-pattern>*.jpeg</url-pattern>
		<url-pattern>*.jpe</url-pattern>
		<url-pattern>*.jfif</url-pattern>
		<url-pattern>*.png</url-pattern>
		<url-pattern>*.gif</url-pattern>
		<url-pattern>*.bmp</url-pattern>
		<url-pattern>*.tif</url-pattern>
		<url-pattern>*.tiff</url-pattern>
		<url-pattern>*.ico</url-pattern>
		<url-pattern>*.dib</url-pattern>
		<url-pattern>*.css</url-pattern>
		<url-pattern>*.js</url-pattern>
		<url-pattern>*.swf</url-pattern>
		<!--必须通过下载服务
		<url-pattern>*.doc</url-pattern>
		<url-pattern>*.docx</url-pattern>
		<url-pattern>*.xls</url-pattern>
		<url-pattern>*.xlsx</url-pattern>
		<url-pattern>*.pdf</url-pattern>
		<url-pattern>*.apk</url-pattern>
		-->
	</servlet-mapping>

	<!-- session失效时间20分钟 -->
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

	<!-- request和response避免乱码 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- proxool独立启动 -->
	<servlet>
		<servlet-name>Proxool</servlet-name>
		<servlet-class>com.newtouch.cloud.common.proxool.configuration.ServletConfigurator</servlet-class>
		<init-param>
			<param-name>xmlFile</param-name>
			<param-value>classpath:persistence/proxool.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- proxool连接池监控工具，可查看当前数据库连接情况 -->
	<servlet>
		<servlet-name>ProxoolAdmin</servlet-name>
		<servlet-class>org.logicalcobwebs.proxool.admin.servlet.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProxoolAdmin</servlet-name>
		<url-pattern>/adminProxool</url-pattern>
	</servlet-mapping>

	<!-- axis1 begin -->
	<!-- axis1服务 -->
	<servlet>
		<servlet-name>AxisServlet</servlet-name>
		<servlet-class>org.apache.axis.transport.http.AxisServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/servlet/AxisServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>*.jws</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>

	<!-- axis1管理器 -->
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>org.apache.axis.transport.http.AdminServlet</servlet-class>
		<load-on-startup>11</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/AdminServlet</url-pattern>
	</servlet-mapping>

	<!-- axis1监控 -->
	<servlet>
		<servlet-name>SOAPMonitorService</servlet-name>
		<servlet-class>org.apache.axis.monitor.SOAPMonitorService</servlet-class>
		<init-param>
			<param-name>SOAPMonitorPort</param-name>
			<param-value>5001</param-value>
		</init-param>
		<load-on-startup>12</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>SOAPMonitorService</servlet-name>
		<url-pattern>/SOAPMonitor</url-pattern>
	</servlet-mapping>
	<!-- axis1 end -->

	<!-- spring初始化 -->
	<servlet>
		<servlet-name>SpringDispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:/spring/spring.xml</param-value>
		</init-param>
		<load-on-startup>20</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>SpringDispatcherServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- request工具类-->
	<listener>
		<listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
	</listener>

	<!-- NSR报表初始化加载 -->
	<servlet>
		<servlet-name>NSRInitServlet</servlet-name>
		<servlet-class>com.newtouch.nwfs.gl.voucherbook.nsr.NSRInitServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>

	<!-- 流程WfWebApp部分界面取数方法，后续优化-->
	<servlet>
		<servlet-name>WfWebServlet</servlet-name>
		<servlet-class>Freesky.M8Base.Workflow.WebController.WfWebServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WfWebServlet</servlet-name>
		<url-pattern>/WfController/*</url-pattern>
	</servlet-mapping>
</web-app>
